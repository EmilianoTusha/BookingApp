@model ConcertBooking.Web.ViewModels.DetailsVenueViewModel

@{
    ViewData["Title"] = "Venue Details";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h2>@Model.Name</h2>
        </div>
        <div class="card-body">
            <h4 class="text-muted">Venue Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fas fa-building"></i> Name
                </dt>
                <dd class="col-sm-9">
                    @Model.Name
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fas fa-map-marker-alt"></i> Address
                </dt>
                <dd class="col-sm-9">
                    @Model.Address
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    <i class="fas fa-chair"></i> Seat Capacity
                </dt>
                <dd class="col-sm-9">
                    @Model.SeatCapacity
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
